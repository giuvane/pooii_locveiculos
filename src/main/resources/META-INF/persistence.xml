<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="LocadoraVeiculos" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>utfpr.giuvane.locadoraveiculos.modelo.vo.Carro</class>
    <class>utfpr.giuvane.locadoraveiculos.modelo.vo.Carga</class>
    <class>utfpr.giuvane.locadoraveiculos.modelo.vo.Cargo</class>
    <class>utfpr.giuvane.locadoraveiculos.modelo.vo.Motocicleta</class>
    <class>utfpr.giuvane.locadoraveiculos.modelo.vo.Passeio</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/locadora_veiculos_hibernate"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="12345"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
